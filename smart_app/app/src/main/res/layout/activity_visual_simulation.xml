<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title / Mode / Floors -->
        <TextView
            android:id="@+id/tvBuilding"
            android:text="Simulation Mode — 5 Floors"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <!-- Current floor summary -->
        <TextView
            android:id="@+id/tvCurrentFloor"
            android:text="Current Floors →  E1: 1 | E2: 1 | E3: 1"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <!-- Load summary -->
        <TextView
            android:id="@+id/tvLoadStatus"
            android:text="Load: E1 0/10 | E2 0/10 | E3 0/10"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Main horizontal sim area -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Floor labels -->
            <LinearLayout
                android:id="@+id/floorsContainer"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="32dp" />

            <!-- Shafts row -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Shaft 1 -->
                <FrameLayout
                    android:id="@+id/shaftContainer1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/elevator1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#555555"
                        android:layout_gravity="top|center_horizontal" />
                </FrameLayout>

                <!-- Shaft 2 -->
                <FrameLayout
                    android:id="@+id/shaftContainer2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/elevator2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#555555"
                        android:layout_gravity="top|center_horizontal" />
                </FrameLayout>

                <!-- Shaft 3 -->
                <FrameLayout
                    android:id="@+id/shaftContainer3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0">

                    <TextView
                        android:id="@+id/elevator3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#555555"
                        android:layout_gravity="top|center_horizontal" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Stats button -->
        <Button
            android:id="@+id/btnStats"
            android:text="View Statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
